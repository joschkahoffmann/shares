<table class= 'table table-striped '>
	<thead>
		<tr>
			<th>Name</th>
			<th>Symbol</th>
			<th>Current Price</th>
			<% if @user.id== current_user.id%>
				<th>Actions</th>
			<%end%>
		</tr>
	</thead>
	<tbody>
		<% @user_stocks.each do |user_stock|%>
			<tr>
				<td><%= user_stock.name%></td>
				<td><%= user_stock.ticker%></td>
				<td><=% user_stock.last_price%></td>
				
				<% if @user.id== current_user.id%>
					<td><%= link_to "Delete", user_stock_path(user_stock), method: :delete, data: {confirm: 'Are you sure?'}, class:'btn btn-xs btn-danger'%>
						<%= link_to "View Price Movements", stock_prices_path(stock_id: user_stock.id), class: 'btn btn-xs btn-default'%> 
					</td>
				<%end%>
			</tr>
		<%end%>
	</tbody>



</table>